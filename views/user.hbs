<div class="bg-light p-5 rounded mt-3">
    <h1>Listar Usuarios</h1>
    {{#if table}}
      
          <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#ID</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        {{#each usuario}}
        <tbody>
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{nome}}</td>
            <td>{{email}}</td>
            <td>
              <div class="row g-1">

                  <div class="col-6 col-md-3">
                    <form action="/editar" method="post">
                      <input type="hidden" name="id" value="{{id}}">
                      <button class="w-200 btn btn-info">Editar</button>
                    </form>       
                  </div>
                  <div class="col-6 col-md-3">
                    <form action="/delet" method="post">
                    <input type="hidden" name="id" value="{{id}}">
                    <button class="w-200 btn btn-danger">Excluir</button>
                    </form>
                  </div>
              </div>
            </td>
          </tr>
        </tbody>
         {{/each}}
      </table>
  {{else}}
  <h4 class="mt-4">Nenhum usuario foi encontado...</h4>
  {{/if}}
</div>