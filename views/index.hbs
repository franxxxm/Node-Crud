<div class="bg-light p-5 rounded mt-3">
    <h1>Cadastro</h1>
    <form action="/cad" method="POST">
        <div class="row mt-5">
            <div class="col-md-5 mb-3">
                <div class=" ">
                    <label for="nome" class="form-label">Nome:</label>
                    <input type="text" name="nome" class="form-control" placeholder="Digite seu nome" aria-label="Username" aria-describedby="basic-addon1">
                </div>
            </div>
            <div class="col-md-5 mb-3">
                <div class=""> 
                    <label for="email" class="form-label">Email:</label>
                    <input type="text" name="email" class="form-control" placeholder="Digite seu email" aria-label="Email" aria-describedby="basic-addon1">
                </div>
            </div>
            <div class="col-md-2">
                <button class="mt-3 p-3 w-100 btn btn-success">Enviar</button>
            </div>
        </div>     
    </form>
    <br>
    {{>msg}}
</div>


