{{#if erro}}
<div class="bg-light p-5 rounded mt-3">
    <h1>Editar</h1>
    <form action="/update" method="post">
        <input type="hidden" name="id" value="{{id}}">
        <div class="row mt-5">
            <div class="col-md-5 mb-3">
                <div class="">
                    <label for="nome" class="form-label">Nome:</label>
                    <input type="text" name="nome" class="form-control" value="{{nome}}" aria-label="Username" aria-describedby="basic-addon1">
                </div>
            </div>
            <div class="col-md-5 mb-3">
                <div class=""> 
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" name="email" class="form-control" value="{{email}}" aria-label="Email" aria-describedby="basic-addon1">
                </div>
            </div>
            <div class="col-md-2">
                <button class="mt-3 p-3 w-100 btn btn-warning">Editar alterações</button>
            </div>
        </div>     
    </form>
</div>
{{else}}
    <div class="card bg-danger text-white">
        <div class="card-body">
            Você não tem permissão para alterar esse usuario
        </div>
    </div>
{{/if}}